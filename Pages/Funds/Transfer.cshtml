@page
@model Ristysoft.CashFlow.Pages.Funds.TransferModel

@{
	ViewData["Title"] = "Transfer";
}

<h1>Transfer</h1>

<h4>Fund</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<div class="form-group">
				<label asp-for="Transfer.FromFundId" class="control-label"></label>
				<select asp-for="Transfer.FromFundId" class="form-control" asp-items="SelectLists.FundList().Nullable()"></select>
				<span asp-validation-for="Transfer.FromFundId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Transfer.ToFundId" class="control-label"></label>
				<select asp-for="Transfer.ToFundId" class="form-control" asp-items="SelectLists.FundList().Nullable()"></select>
				<span asp-validation-for="Transfer.ToFundId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Transfer.Amount" class="control-label"></label>
				<input asp-for="Transfer.Amount" class="form-control" />
				<span asp-validation-for="Transfer.Amount" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Transfer" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}