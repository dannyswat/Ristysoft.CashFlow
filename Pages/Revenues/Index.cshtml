@page
@model Ristysoft.CashFlow.Pages.Revenues.IndexModel

@{
    ViewData["Title"] = "Revenues";
}

<h1>Revenues</h1>

<p>
    <a class="btn btn-primary" asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ItemList.Items[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemList.Items[0].RevenueType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemList.Items[0].Amount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ItemList.Items)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RevenueType.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@(await Html.RenderComponentAsync<Pager>(RenderMode.Static, new { PageModel = Model.ItemList }))
